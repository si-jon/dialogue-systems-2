  <individual name="metric">
    <one-of>
      <item>celsius</item>
      <item>metric</item>
    </one-of>
  </individual>

  <individual name="imperial">
    <one-of>
      <item>fahrenheit</item>
      <item>imperial</item>
    </one-of>
  </individual>

  <individual name="kelvin">
    <one-of>
      <item>kelvin</item>
    </one-of>
  </individual>


</grammar>
